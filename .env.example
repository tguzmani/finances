# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/finances?schema=public"

# Gmail IMAP (use App Password)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=tu-email@gmail.com
IMAP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Binance API
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# ==========================================
# Scheduler Configuration (Cronjobs)
# ==========================================

# Enable/Disable schedulers globally
SCHEDULERS_ENABLED=true

# Transactions Email Sync (Banesco)
# Cron: */5 * * * * = every 5 minutes
TRANSACTIONS_SYNC_CRON=*/5 * * * *
TRANSACTIONS_SYNC_LIMIT=30

# Exchanges Binance Sync (P2P)
# Cron: */10 * * * * = every 10 minutes
EXCHANGES_SYNC_CRON=*/10 * * * *
EXCHANGES_SYNC_LIMIT=30
EXCHANGES_SYNC_TRADE_TYPE=SELL
